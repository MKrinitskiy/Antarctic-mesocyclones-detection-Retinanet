class SAIL_Generator(Generator):
    """ Generate data for a custom CSV dataset.

    See https://github.com/fizyr/keras-retinanet#csv-datasets for more information.
    """

    def __init__(self,
                 sail_data_file,
                 csv_class_file,
                 ch5_data_file,
                 ch9_data_file,
                 btd_data_file,
                 # base_dir=None,
                 **kwargs):
        """ Initialize a CSV data generator.

        Args
            csv_data_file: Path to the CSV annotations file.
            csv_class_file: Path to the CSV classes file.
            base_dir: Directory w.r.t. where the files are to be searched (defaults to the directory containing the csv_data_file).
        """
        self.image_names = []
        self.image_data  = {}
        # self.base_dir    = base_dir
        self.ch5_data_file = ch5_data_file
        self.ch9_data_file = ch9_data_file
        self.btd_data_file = btd_data_file

        self.ch5_data = np.load(self.ch5_data_file)
        self.ch9_data = np.load(self.ch9_data_file)
        self.btd_data = np.load(self.btd_data_file)


        # Take base_dir from annotations file if not explicitly specified.
        # if self.base_dir is None:
        #     self.base_dir = os.path.dirname(sail_data_file)

        # parse the provided class file
        try:
            with open(csv_class_file, 'r', newline='') as file:
                self.classes = _read_classes(csv.reader(file, delimiter=','))
        except ValueError as e:
            raise_from(ValueError('invalid CSV class file: {}: {}'.format(csv_class_file, e)), None)

        self.labels = {}
        for key, value in self.classes.items():
            self.labels[value] = key

        # csv with img_path, x1, y1, x2, y2, class_name
        try:
            # with open(csv_data_file, 'r', newline='') as file:
            # self.image_data = _read_annotations(sail_data_file, self.classes)
            with open(sail_data_file, 'rb') as f:
                self.image_data = pickle.load(f)
        except:
            raise_from(ValueError('invalid annotations file: {}'.format(sail_data_file)), None)
        self.image_names = list(self.image_data.keys())

        super(SAIL_Generator, self).__init__(**kwargs)

    def size(self):
        """ Size of the dataset.
        """
        return len(self.image_names)

    def num_classes(self):
        """ Number of classes in the dataset.
        """
        return max(self.classes.values()) + 1

    def has_label(self, label):
        """ Return True if label is a known label.
        """
        return label in self.labels

    def has_name(self, name):
        """ Returns True if name is a known class.
        """
        return name in self.classes

    def name_to_label(self, name):
        """ Map name to label.
        """
        return self.classes[name]

    def label_to_name(self, label):
        """ Map label to name.
        """
        return self.labels[label]

    # def image_path(self, image_index):
    #     """ Returns the image path for image_index.
    #     """
    #     return os.path.join(self.base_dir, self.image_names[image_index])

    def image_aspect_ratio(self, image_index):
        """ Compute the aspect ratio for an image with image_index.
        """
        # PIL is fast for metadata
        # image = Image.open(self.image_path(image_index))
        img_crop_bbox = self.image_data[self.image_names[image_index]]['crop_bbox']
        return float(img_crop_bbox[2]) / float(img_crop_bbox[3])

    def load_image(self, image_index):
        """ Load an image at the image_index.
        """

        # return read_image_bgr(self.image_path(image_index))
        curr_bbox_crop_x, curr_bbox_crop_y, curr_bbox_crop_w, curr_bbox_crop_h = self.image_data[self.image_names[image_index]]['crop_bbox']
        crop_ch5 = self.ch5_data[self.image_data[self.image_names[image_index]]['data_fname_idx'],
                   curr_bbox_crop_y:curr_bbox_crop_y + curr_bbox_crop_h,
                   curr_bbox_crop_x:curr_bbox_crop_x + curr_bbox_crop_w, np.newaxis]
        crop_ch9 = self.ch9_data[self.image_data[self.image_names[image_index]]['data_fname_idx'],
                   curr_bbox_crop_y:curr_bbox_crop_y + curr_bbox_crop_h,
                   curr_bbox_crop_x:curr_bbox_crop_x + curr_bbox_crop_w, np.newaxis]
        crop_btd = self.btd_data[self.image_data[self.image_names[image_index]]['data_fname_idx'],
                   curr_bbox_crop_y:curr_bbox_crop_y + curr_bbox_crop_h,
                   curr_bbox_crop_x:curr_bbox_crop_x + curr_bbox_crop_w, np.newaxis]
        return np.concatenate([crop_ch5, crop_ch9, crop_btd], axis=-1)



    def load_annotations(self, image_index):
        """ Load annotations for an image_index.
        """
        path        = self.image_names[image_index]
        annotations = {'labels': np.empty((0,)), 'bboxes': np.empty((0, 4))}

        for idx, annot in enumerate(self.image_data[path]['labels_bboxes']):
            annotations['labels'] = np.concatenate((annotations['labels'], [self.name_to_label(annot['class'])]))
            annotations['bboxes'] = np.concatenate((annotations['bboxes'], [[
                float(annot['bbox'][0]),
                float(annot['bbox'][1]),
                float(annot['bbox'][0] + annot['bbox'][2]),
                float(annot['bbox'][1] + annot['bbox'][3]),
            ]]))

        return annotations
